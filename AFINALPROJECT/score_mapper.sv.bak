module score_mapper ( input [3:0]	score_bit,
							output [3:0]	char_value
							);
					 
always_comb 
    begin
	 char_value = 4'h0;
        case(score_bit) 
            4'h0: begin 
            char_value = 4'h0;
            end
				4'h1: begin
				char_value = 4'h1;
            end
				4'h2: begin
				char_value = 4'h2;
            end
				4'h3: begin
				char_value = 4'h3;
            end
				4'h4: begin
				char_value = 4'h4;
            end
				4'h5: begin
				char_value = 4'h5;
            end
				4'h6: begin
				char_value = 4'h6;
            end
				4'h7: begin
				char_value = 4'h7;
            end
				4'h8: begin
				char_value = 4'h8;
            end
				4'h9: begin
				char_value = 4'h9;
            end
				default: begin
				char_value = 4'h0;
				end
			endcase
    end
